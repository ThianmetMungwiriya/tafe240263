<Page
    x:Class="Calculator.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" >
                <TextBlock x:Name="universalcalTextBlock" Margin="50" FontSize="60" Width="600">Universal Calculator</TextBlock>
                <Image Source="Assets/abacus.PNG" Height="152" Width="189" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="mathcalButton" Margin="50" FontSize="50" Width="470" Click="mathcalButton_Click">Math Calculator</Button>
				<Button x:Name="mortagecalButton" Margin="50" FontSize="50" Width="470" Click="mortagecalButton_Click">Mortgage Calculator</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
				<Button x:Name="currencyButton" Margin="50" FontSize="50" Width="470" Click="currencyButton_Click">Currency Calculator</Button>
				<Button x:Name="exitButton" Margin="50" FontSize="50" Width="470">Exit</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
